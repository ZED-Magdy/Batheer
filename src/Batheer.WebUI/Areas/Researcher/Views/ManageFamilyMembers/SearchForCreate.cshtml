@model Batheer.WebUI.Areas.AssociationsAffiliated.Models.SearchForCreateVM
@using Batheer.Application.CouncilProjects.Queries.GetCouncilProjectById;
@using Batheer.Application.AssociationAffiliatedProjects.Queries.GetByAssociationsAffiliatedIdAndcouncilProjectId;

@{
    ViewBag.Title = "إدارة العائلات -  إنشاء طلب دعم الأسر";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4> إضافة فرد بعائلة</h4>
                <hr />
                <form asp-action="SearchForCreate">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">

                   <input type="hidden" name="FamilyId" value="@ViewBag.FamilyId" />
                   <input type="hidden" name="FamilyObjectkey" value="@ViewBag.FamilyObjectkey" />

                   <div class="form-group col-md-6">
                       <label asp-for="IdentityNo" class="control-label">رقم الهوية</label>
                       <input asp-for="IdentityNo" class="form-control" maxlength="10" mixlength="10" required pattern="[1, 2][0-9]{9}$" />
                       <span asp-validation-for="IdentityNo" class="text-danger"></span>

                   </div>
                        <div class="form-group col-md-12">
                            <button class="btn btn-primary">بحث</button>
                        </div>
                    </div>
                </form>

                <div>
                    <a asp-action="Index" asp-route-familyObjectkey="@ViewBag.FamilyObjectkey">عودة للقائمة</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}