@model Batheer.Application.Families.Commands.CreateFamily.CreateFamilyCommand

<h4>بيانات السكن</h4>
<hr />
<div class="row">


    <div class="form-group col-md-6">
        <label asp-for="AccommodationData.AccommodationTypeId" class="control-label">نوع السكن</label>
        <select asp-for="AccommodationData.AccommodationTypeId" class="form-control"
                asp-items="@(new SelectList(ViewBag.AccommodationTypeId, "Id", "Name"))" required >
