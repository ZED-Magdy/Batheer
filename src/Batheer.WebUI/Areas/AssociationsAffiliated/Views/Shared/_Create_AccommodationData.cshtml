        <label asp-for="AccommodationData.Others" class="control-label">أخرى</label>
        <input asp-for="AccommodationData.Others" class="form-control" />
        <span asp-validation-for="AccommodationData.Others" class="text-danger"></span>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
