@model Batheer.Application.Families.Commands.CreateFamily.CreateFamilyCommand

<h4>بيانات المشروع</h4>
<hr />
<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="ProjectData.EstimatedProjectCostId" class="control-label">التكلفة التقديرية للمشروع</label>
        <select asp-for="ProjectData.EstimatedProjectCostId" class="form-control"
                asp-items="@(new SelectList(ViewBag.EstimatedProjectCostId, "Id", "Name"))">
            <option>--الرجاء الاختيار--</option>
        </select>
        <span asp-validation-for="ProjectData.EstimatedProjectCostId" class="text-danger"></span>

    </div>
    <div class="form-group col-md-6">
        <label asp-for="ProjectData.Others" class="control-label">أخرى</label>
        <input asp-for="ProjectData.Others" class="form-control" />
        <span asp-validation-for="ProjectData.Others" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="ProjectData.AboutTheProject" class="control-label">نبذة عن المشروع</label>
        <input asp-for="ProjectData.AboutTheProject" class="form-control" />
        <span asp-validation-for="ProjectData.AboutTheProject" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="ProjectData.WhatAreTheObstaclesFacingTheProject" class="control-label">ما العوائق التي تقابل المشروع؟</label>
        <textarea asp-for="ProjectData.WhatAreTheObstaclesFacingTheProject" class="form-control"></textarea>
        <span asp-validation-for="ProjectData.WhatAreTheObstaclesFacingTheProject" class="text-danger"></span>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
