@model Batheer.Application.Families.Commands.CreateFamily.CreateFamilyCommand

<h4>الحالة الاجتماعية</h4>
<hr />
<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="MaritalStatusData.MaritalStatusId" class="control-label">الحالة الاجتماعية</label>
        <select asp-for="MaritalStatusData.MaritalStatusId" class="form-control"
                asp-items="@(new SelectList(ViewBag.MaritalStatusId, "Id", "Name"))" required>
            <option selected disabled value="">--الرجاء الاختيار--</option>
        </select>
        <span asp-validation-for="MaritalStatusData.MaritalStatusId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="MaritalStatusData.Others" class="control-label">أخرى</label>
        <input asp-for="MaritalStatusData.Others" class="form-control" />
        <span asp-validation-for="MaritalStatusData.Others" class="text-danger"></span>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
