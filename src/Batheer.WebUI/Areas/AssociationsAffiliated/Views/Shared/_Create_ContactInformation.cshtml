@model Batheer.Application.Families.Commands.CreateFamily.CreateFamilyCommand

<h4>بيانات التواصل</h4>
<hr />
<div class="row">


    <div class="form-group col-md-6">
        <label asp-for="ContactInformation.Email" class="control-label">البريد الالكتروني</label>
        <input asp-for="ContactInformation.Email" class="form-control" type="email" />
        <span asp-validation-for="ContactInformation.Email" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ContactInformation.Mobile" class="control-label">رقم الجوال</label>
        <input asp-for="ContactInformation.Mobile" class="form-control" placeholder="9665xxxxxxxx" required />
        <span asp-validation-for="ContactInformation.Mobile" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ContactInformation.PhoneNumber" class="control-label">رقم الهاتف</label>
        <input asp-for="ContactInformation.PhoneNumber" class="form-control" />
        <span asp-validation-for="ContactInformation.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ContactInformation.Facebook" class="control-label">فيسبوك</label>
        <input asp-for="ContactInformation.Facebook" class="form-control" />
        <span asp-validation-for="ContactInformation.Facebook" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ContactInformation.Twitter" class="control-label">تويتر</label>
        <input asp-for="ContactInformation.Twitter" class="form-control" />
        <span asp-validation-for="ContactInformation.Twitter" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="ContactInformation.Instagram" class="control-label">انستجرام</label>
        <input asp-for="ContactInformation.Instagram" class="form-control" />
        <span asp-validation-for="ContactInformation.Instagram" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="ContactInformation.Others" class="control-label">أخرى</label>
        <textarea asp-for="ContactInformation.Others" class="form-control"></textarea>
        <span asp-validation-for="ContactInformation.Others" class="text-danger"></span>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
