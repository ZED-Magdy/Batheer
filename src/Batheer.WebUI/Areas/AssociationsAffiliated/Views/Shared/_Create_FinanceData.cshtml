        <label asp-for="FinanceData.FinanceTypeId" class="control-label">ما نوع التمويل الذي ترغب به؟</label>
        <select asp-for="FinanceData.FinanceTypeId" class="form-control"
                asp-items="@(new SelectList(ViewBag.FinanceTypeId, "Id", "Name"))">
