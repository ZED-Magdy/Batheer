            <option>--الرجاء الاختيار--</option>
        </select>
        <span asp-validation-for="FinanceData.ProducedFamilyProductId" class="text-danger"></span>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
