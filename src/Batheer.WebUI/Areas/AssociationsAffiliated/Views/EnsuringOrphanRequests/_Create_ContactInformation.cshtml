        </div>
        <div class="form-group col-md-6">
            <label asp-for="Mobile" class="control-label">رقم الجوال</label>
            <input asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PhoneNumber" class="control-label">رقم الهاتف</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Facebook" class="control-label">فيسبوك</label>
            <input asp-for="Facebook" class="form-control" />
            <span asp-validation-for="Facebook" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Twitter" class="control-label">تويتر</label>
            <input asp-for="Twitter" class="form-control" />
            <span asp-validation-for="Twitter" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Instagram" class="control-label">انستجرام</label>
            <input asp-for="Instagram" class="form-control" />
            <span asp-validation-for="Instagram" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Others" class="control-label">أخرى</label>
            <textarea asp-for="Others" class="form-control"></textarea>
            <span asp-validation-for="Others" class="text-danger"></span>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
