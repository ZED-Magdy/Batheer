@model BaSaleh.Domain.AssociationAffiliatedProjects.Entities.ProjectData

<h4>بيانات المشروع</h4>
<hr />
<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="EstimatedProjectCostId" class="control-label">التكلفة التقديرية للمشروع</label>
        <select asp-for="EstimatedProjectCostId" class="form-control" asp-items="ViewBag.EstimatedProjectCostId"></select>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Others" class="control-label">أخرى</label>
        <input asp-for="Others" class="form-control" />
        <span asp-validation-for="Others" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="AboutTheProject" class="control-label">نبذة عن المشروع</label>
        <input asp-for="AboutTheProject" class="form-control" />
        <span asp-validation-for="AboutTheProject" class="text-danger"></span>
    </div>
    <div class="form-group col-md-12">
        <label asp-for="WhatAreTheObstaclesFacingTheProject" class="control-label">ما العوائق التي تقابل المشروع؟</label>
        <textarea asp-for="WhatAreTheObstaclesFacingTheProject" class="form-control"></textarea>
        <span asp-validation-for="WhatAreTheObstaclesFacingTheProject" class="text-danger"></span>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
