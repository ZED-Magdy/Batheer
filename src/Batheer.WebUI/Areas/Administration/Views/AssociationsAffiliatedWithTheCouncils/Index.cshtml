@model IEnumerable<Batheer.Application.AssociationsAffiliatedWithTheCouncils.Queries.GetAssociationsAffiliatedWithTheCouncils.AssociationsAffiliatedWithTheCouncil>

@{
    ViewData["Title"] = "بيانات الجمعيات التابعة للمجلس";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            @*<div class="card-header">Form Elements</div>*@
            <div class="card-body">
                <h1>بيانات الجمعيات التابعة للمجلس</h1>

                <p>

                    <a asp-action="Create" class="btn btn-outline-primary"> إنشاء جمعية</a>

                </p>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                اسم الجمعية
                            </th>
                            <th>
                                عن الجمعية
                            </th>
                            <th>
                                الهيكلة الإدارية
                            </th>
                            <th>
                                بيانات التواصل
                            </th>
                            <th>
                                الموقع على الخريطة
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(o => o.Name))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @item.AboutIt.Truncate(19)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdministrativeRestructuring)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactInformation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LocationOnTheMap)
                                </td>
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                                    @*<a asp-action="Details" asp-route-id="@item.Id">عرض</a>*@
                                    @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
