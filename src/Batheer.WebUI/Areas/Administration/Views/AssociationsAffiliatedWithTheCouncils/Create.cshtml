@model Batheer.Application.AssociationsAffiliatedWithTheCouncils.Commands.CreateCouncil.CreateCouncilCommand

@{
    ViewData["Title"] = "إنشاء جمعية تابعة للمجلس";
}

<h1>إنشاء</h1>

<h4>جمعية تابعة للمجلس</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">اسم الجمعية</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouncilCategory" class="control-label">التصنيف</label>
                <select class="form-control" asp-for="CouncilCategory">
                    <option disabled value="" selected>--الرجاء الاختيار--</option>
                    <option value="0">جمعيات أهلية</option>
                    <option value="1">جمعيات تنمية</option>
                    <option value="2">جمعيات تحفيظ ومكاتب الدعوة</option>
                </select>
                <span asp-validation-for="CouncilCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="إنشاء" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">عودة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
