@model IEnumerable<Batheer.Application.Users.Queries.GetUsersByRole.UserDto>

@{
    ViewData["Title"] = "حسابات الباحثين على النظام";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            @*<div class="card-header">Form Elements</div>*@
            <div class="card-body">

                <h1>@ViewData["Title"]</h1>


                <p>

                    <a asp-action="Create" class="btn btn-outline-primary"> إنشاء حساب</a>

                </p>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            
                            <th>
                                الاسم الكامل
                            </th>
                            <th>
                                رقم الجوال
                            </th>
                            <th>
                                اسم المستخدم
                            </th>
                            <th>
                                الصورة الشخصية
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    <div class="avatar">
                                        <img class="avatar-img" src="~/UploadedFiles/ShowByObjectKey?objectKey=@item.PhotoObjectkey" alt="user@email.com">
                                        @*<span class="c-avatar-status bg-success"></span>*@
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>