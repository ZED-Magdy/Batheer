@using Batheer.Application.Modules.Lookups.Queries.GetFamilyNeedsWithDetails
@model IEnumerable<FamilyNeedWithDetails>

@using Batheer.WebUI.Utls;
@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h1>  إدارة نوع الدعم</h1>

                <p>

                    <a asp-action="Createdetails" class="btn btn-outline-primary">   إنشاء نوع دعم مقدم</a>

                </p>


                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card">
                                <div class="card-header">
                                    @item.Name
                                </div>
                                <div class="card-body">
                                    <ul class="list-group">
                                        @foreach (var detail in item.FamilyNeedDetails)
                                        {

                                            <li class="list-group-item col-6">@detail.Name</li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>