<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <div class="logo me-auto">
                <h1><a href="~/">باذر</a></h1>

                @*<img src="~/minister.jpg" alt="" class="img-fluid">*@
                <!-- Uncomment below if you prefer to use an image logo -->
                @*<a href="index.html"><img src="/themes/scaffold/assets/img/logo.png" alt="" class="img-fluid"></a>*@
                @*<a href="index.html"><img src="~/minister.jpg" alt="" class="img-fluid"></a>*@
            </div>


            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" href="/">الرئيسية</a></li>
                    <li class="dropdown">
                        <a href="#"><span>@Batheer.WebUI.Common.UIHelper.SystemBrandName</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a class="nav-link scrollto" href="#about">عن النطام</a></li>
                            <li><a class="nav-link scrollto" href="#team">الرؤية والرسالة والقيم</a></li>
                        </ul>
                    </li>
                    @*<li><a class="nav-link scrollto" href="/home/services">الخدمات</a></li>*@
                    <li><a class="nav-link scrollto" href="/home/AssociationAffiliateds">الجمعيات</a></li>
                    <!-- <li><a class="nav-link scrollto " href="#portfolio">Portfolio</a></li>
                    <li><a class="nav-link scrollto" href="#pricing">Pricing</a></li> -->
                    <li><a class="nav-link scrollto" href="/home/contactus">تواصل معنا</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li><a class="nav-link scrollto" asp-controller="Account" asp-action="Logout">خروج</a></li>
                        if (User.IsInRole(Batheer.Domain.AuthenticationUsers.User.UserRoles.AdminRole.ToString()))
                        {
                            <li><a class="nav-link scrollto" asp-controller="Home" asp-action="index" asp-area="Administration">لوحة التحكم</a></li>
                        }
                        else if (User.IsInRole(Batheer.Domain.AuthenticationUsers.User.UserRoles.CouncilRole.ToString()))
                        {
                            <li><a class="nav-link scrollto" asp-controller="Home" asp-action="index" asp-area="AssociationsAffiliated">لوحة التحكم</a></li>
                        }
                        else if (User.IsInRole(Batheer.Domain.AuthenticationUsers.User.UserRoles.Researcher.ToString()))
                        {
                            <li><a class="nav-link scrollto" asp-controller="Home" asp-action="index" asp-area="Researcher">لوحة التحكم</a></li>
                        }
                    }
                    else
                    {
                        <li><a class="nav-link scrollto" asp-controller="Account" asp-action="Login">دخول</a></li>

                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

            <div class="header-social-links d-flex align-items-center">
                <a href="https://twitter.com/ngostsa" target="_blank" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
            </div>

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero" style="min-height:640px">

        <div class="container">
            @RenderBody()

        </div>

    </section><!-- End Hero -->
    <!-- ======= Footer ======= -->
    <footer id="footer" class="fixed-bottom">

        @*<div class="container">
                <div class="copyright">
                    &copy; Copyright <strong><span>Scaffold</span></strong>. All Rights Reserved
                </div>
                <div class="credits">
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>*@
    </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

