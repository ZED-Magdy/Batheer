    <script src="/themes/scaffold/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Template Main JS File -->
    <script src="/themes/scaffold/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>